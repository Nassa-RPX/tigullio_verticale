---
import Layout from '../layouts/Layout.astro';	
import Logo from '../components/Logo.astro';
import BookmarkIcon from '@/assets/icons/bookmark.svg';

---

<Layout title="Home">
	<div class="home-container">
		<section class="load-animation logo-section gsapped-in">
			<Logo />
		</section>

		<h1 class="load-animation gsapped-in">Tigullio <br /> Verticale</h1>

		<div class="load-animation gsapped-in home-btns">
			<button id="program-btn" class="btn main" data-year={2025}>
				<BookmarkIcon height="24" />
				<span>Programma 2025</span>
			</button>

			<a href="/newsletter" class="btn outline small">
				Iscriviti alla Newsletter
			</a>
		</div>
	</div>
</Layout>

<script src='../scripts/home/animations.ts' />

<style>
	.home-container {
		height: 100%;
		width: 100%;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 0.5rem;
	}

	.logo-section {
		width: 150px;
	}

	.home-btns {
		margin-top: 1.5rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		align-items: center;
	}

	h1 {
		text-align: center;
	}


	@media screen and (min-width: 1200px) {

		.logo-section {
			wihth: 250px;
			margin-right: 1.5rem;
		}
	}
</style>
