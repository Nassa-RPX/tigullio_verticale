---
import '@/styles/global.css';
import '@/styles/component.css';

import Tigullio from '@/components/Tigullio.astro';

interface Props {
  title: string;
}

const { title } = Astro.props

---

<html lang="it">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
    <title>{title}</title>
	</head>
	<body>
		<main>
			<section class="tigullio-section">
				<Tigullio />
			</section>

      <slot />
		</main>
	</body>
</html>

<style scoped>
	main {
		height: 100vh;
		width: 100vw;
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
	}

	.tigullio-section {
		position: fixed;
		top: 0;
		right: 0;
		left: 0;
	}

	@media screen and (min-width: 1200px) {
		main {
			flex-direction: row;
		}


		.tigullio-section {
			display: none;
		}

		.logo-section {
			margin-right: 1.5rem;
		}
	}
</style>


