---
import '@/styles/global.css';
import '@/styles/component.scss';
import '@/styles/utilities.scss'

import Tigullio from '@/components/Tigullio.astro';

interface Props {
  title: string;
}

const { title } = Astro.props

---

<html lang="it">
	<head>
	  <meta charset="utf-8" />
	  <link rel="icon" type="image/svg+xml" href="/icon.svg" />
	  <meta name="viewport" content="width=device-width" />
	  <meta name="generator" content={Astro.generator} />
	  <title>{title} | Tigullio Verticale</title>
	</head>

	<body>
	  <main>
	    <section class="tigullio-section">
	      <Tigullio />
	    </section>

	    <slot />
	  </main>
	</body>
</html>

<script src="@/scripts/layouts.scripts.ts" />

<style scoped>
	main {
		height: 100vh;
		width: 100vw;
		position: relative;
	}

	.tigullio-section {
		position: fixed;
		top: 0;
		right: 0;
		left: 0;
		z-index: -200;
	}
	.tigullio-section svg {
		transform: scale(2);
	}

	@media screen and (min-width: 1200px) {
		main {
			flex-direction: row;
		}


		.tigullio-section {
			display: none;
		}

		.logo-section {
			margin-right: 1.5rem;
		}
	}
</style>


